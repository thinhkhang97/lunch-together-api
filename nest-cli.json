{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/lunch-together-api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/lunch-together-api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/lunch-together-api",
  "projects": {
    "core": {
      "type": "application",
      "root": "apps/core",
      "entryFile": "main",
      "sourceRoot": "apps/core/src",
      "compilerOptions": {
        "tsConfigPath": "apps/core/tsconfig.app.json"
      }
    },
    "kernel": {
      "type": "library",
      "root": "libs/kernel",
      "entryFile": "index",
      "sourceRoot": "libs/kernel/src",
      "compilerOptions": {
        "tsConfigPath": "libs/kernel/tsconfig.lib.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "user/application": {
      "type": "library",
      "root": "libs/user/application",
      "entryFile": "index",
      "sourceRoot": "libs/user/application/src",
      "compilerOptions": {
        "tsConfigPath": "libs/user/application/tsconfig.lib.json"
      }
    }
  }
}