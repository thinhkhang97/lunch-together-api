generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/group-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DB")
}

model Group {
  id        String   @id @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  version   Int      @default(0)

  name         String
  groupMembers GroupMember[]

  @@map("group")
}

model GroupRole {
  id        String   @id @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  version   Int      @default(0)

  name            String // Group owner, admin, member
  GroupMemberRole GroupMemberRole[]

  @@map("group_role")
}

model GroupMember {
  id        String   @id @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  version   Int      @default(0)

  name    String
  avatar  String?
  userId  String
  groupId String

  group           Group             @relation(fields: [groupId], references: [id])
  GroupMemberRole GroupMemberRole[]

  @@index([groupId])
  @@map("group_member")
}

model GroupMemberRole {
  id        String   @id @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  version   Int      @default(0)

  groupMemberId String
  roleId        String

  groupMember GroupMember @relation(fields: [groupMemberId], references: [id])
  groupRole   GroupRole   @relation(fields: [roleId], references: [id])

  @@index([groupMemberId, roleId])
  @@map("group_member_role")
}
